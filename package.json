{
  "name": "elastic-otel-wrapper-action",
  "version": "0.1.0",
  "description": "Generates OpenTelemetry trace and span IDs for GitHub Actions workflows",
  "main": "dist/index.js",
  "scripts": {
    "build": "tsc && ncc build src/index.ts -o dist",
    "bundle": "npm run format:write && npm run package",
    "lint:eslint": "npx eslint",
    "lint": "npm run lint:eslint",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "format": "prettier --write '**/*.ts'",
    "format:write": "prettier --write **/*.ts",
    "format:check": "prettier --check '**/*.ts'"
  },
  "keywords": [
    "github-actions",
    "opentelemetry",
    "tracing",
    "observability"
  ],
  "author": "Elastic",
  "license": "Apache-2.0",
  "dependencies": {
    "@actions/core": "^1.11.1"
  },
  "devDependencies": {
    "@types/jest": "^29.5.11",
    "@types/node": "^25.0.9",
    "@vercel/ncc": "^0.38.1",
    "jest": "^29.7.0",
    "prettier": "^3.2.4",
    "ts-jest": "^29.1.1",
    "typescript": "^5.3.3"
  }
}

